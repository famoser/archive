{% extends "full_layout.html.twig" %}

{% import "makros/buttons.html.twig" as buttons %}

{% block title %}create {{ entityName }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-8">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <i class="fa fa-plus"></i>
                    <h3 class="box-title">create new {{ entityName }}</h3>
                </div>
                <div class="box-body">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

        <div class="col-md-4">

            <div class="box box-widget">
                <div class="box-header with-border">
                    <i class="fa fa-info"></i>
                    <h3 class="box-title">help</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <!-- post text -->
                    {% for paragraph in helpParagraphs %}
                        <p>{{ paragraph }}</p>
                    {% endfor %}
                </div>
                <!-- /.box-footer -->
            </div>
            <p></p>
        </div>
    </div>
{% endblock %}